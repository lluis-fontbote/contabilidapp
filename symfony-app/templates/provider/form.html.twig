{% extends "base.html.twig" %}
{% block title %}
    {{ parent() }} - {{ form.vars.data.id ? 'Editar' : 'Nuevo' }} proveedor
{% endblock %}

{% block content %}
<main id="main" class="main">
    <div class="pagetitle">
            <h1>{{ form.vars.data.id ? 'Editar' : 'Nuevo' }} proveedor</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="index.html">
                            Inicio
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="index.html">
                            Proveedores
                        </a>
                    </li>
                    <li class="breadcrumb-item active">
                        {{ form.vars.data.id ? 'Editar' : 'Nuevo' }}
                    </li>
                </ol>
            </nav>
        </div><!-- End Page Title -->
        <section class="section">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <form class="row g-3" method="POST">
                                <div class="col-md-10">
                                    <h5 class="card-title">{{ form.vars.data.id ? 'Editar' : 'Nuevo' }} proveedor</h5>
                                </div>
                                {{ form_row(form._token) }}
                                <div class="col-md-2">
                                    <div class="form-check form-switch">
                                        {{ form_widget(form.active) }}
                                        {{ form_label(form.active) }}
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        {{ form_widget(form.name) }}
                                        {{ form_label(form.name) }}
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        {{ form_widget(form.providerType) }}
                                        {{ form_label(form.providerType) }}
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        {{ form_widget(form.email) }}
                                        {{ form_label(form.email) }}
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        {{ form_widget(form.phone) }}
                                        {{ form_label(form.phone) }}
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    {{ form_widget(form.save) }}
                                    <button style="display:none;" disabled type="submit" class="submitting-button btn btn-primary">
                                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                        Guardando...
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $('button[type=submit]').click(function () {
            $(this).hide();
            $('.submitting-button').show();
        });
    </script>
{% endblock %}